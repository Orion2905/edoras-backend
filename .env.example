# Edoras Flask Backend - Environment Configuration
# File di esempio per configurazione locale

# ================================================
# ENVIRONMENT SETTINGS
# ================================================
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=true

# ================================================
# APPLICATION SECRETS
# ================================================
# In produzione questi vengono gestiti da Azure Key Vault
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-here-change-in-production

# ================================================
# DATABASE CONFIGURATION
# ================================================
# Per sviluppo locale (SQLite)
DATABASE_URL=sqlite:///edoras_dev.db

# Per Azure SQL Database (gli esempi reali sono in Key Vault)
# DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net/database?driver=ODBC+Driver+17+for+SQL+Server

# ================================================
# AZURE CONFIGURATION
# ================================================
# Key Vault URL (configurato automaticamente in produzione)
AZURE_KEY_VAULT_URL=https://kv-edoras-prod.vault.azure.net/

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Azure Storage (per file uploads)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=uploads

# Azure Key Vault (production)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Logging
LOG_LEVEL=DEBUG

# Application Settings
PORT=5000
