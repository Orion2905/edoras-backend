# Environment variables for production deployment
# Copy this to .env in production or set in Azure Container Apps

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py
FLASK_DEBUG=False

# Database Configuration
# For Azure SQL Database:
# DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net/database?driver=ODBC+Driver+17+for+SQL+Server
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@server:5432/database

# Security Keys (generate new ones for production!)
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Azure Configuration
AZURE_KEYVAULT_URL=https://edoras-keyvault-2025.vault.azure.net/
AZURE_CLIENT_ID=your-service-principal-client-id
AZURE_CLIENT_SECRET=your-service-principal-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Application Configuration
SQLALCHEMY_TRACK_MODIFICATIONS=False
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration (adjust for your frontend domain)
CORS_ORIGINS=["https://your-frontend-domain.com", "https://edoras-frontend.azurewebsites.net"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=True
