# Edoras Flask Backend - Development Environment
# Configurazione per usare database Azure SQL anche in sviluppo locale

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True

# Database Configuration - AZURE SQL PRODUCTION
DATABASE_URL=mssql+pyodbc://edorasadmin:EdorasSecure123!@edoras-sql-2025.database.windows.net/edoras-prod-database?driver=ODBC+Driver+17+for+SQL+Server

# For local SQLite (commentato perch√© usiamo Azure SQL)
# DATABASE_URL=sqlite:///edoras_dev.db

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key-for-local-development

# Flask Secret Key (for local development)
FLASK_SECRET_KEY=dev-flask-secret-key-for-local-development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Azure Storage (per file uploads)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=uploads

# Azure Key Vault (production)
AZURE_KEY_VAULT_URL=https://edoras-keyvault-2025.vault.azure.net/

# Logging
LOG_LEVEL=DEBUG

# Application Settings
PORT=5001
